<form action="" method="POST">
  <div class="mb-3 d-flex">
    <label for="exampleFormControlInput1" class="form-label pe-5">Name:</label>
    <input
      type="text"
      name="name"
      class="form-control"
      id="exampleFormControlInput1"
      placeholder="Enter your project name"
    />
  </div>
  <div class="mb-3 d-flex">
    <label for="exampleFormControlTextarea1" class="form-label pe-1"
      >Description:</label
    >
    <textarea
      name="description"
      class="form-control"
      id="exampleFormControlTextarea1"
      rows="3"
    ></textarea>
  </div>
  <div class="mb-3 d-flex">
    <label for="exampleFormControlInput2" class="form-label pe-5"
      >Author:</label
    >
    <input
      type="text"
      name="author"
      class="form-control"
      id="exampleFormControlInput2"
      placeholder="Enter Author Name"
    />
  </div>
  <div class="d-flex justify-content-end align-items-end">
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>
</form>
